---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { createLocalT } from "../../lib/i18n";
import pageDict from "./index.lang";
import pageEn from "../index.lang";

export const prerender = true;
const tPage = createLocalT(pageDict, pageEn);
---

<SiteLayout lang="ko" path="/thewcag-accessibility-visualizer/ko/">
  <!-- Hero Section -->
  <section
    class="bg-gradient-to-br from-teal-50 via-teal-50/50 to-zinc-50 dark:from-zinc-800 dark:via-zinc-800/50 dark:to-zinc-900 py-20 sm:py-24"
