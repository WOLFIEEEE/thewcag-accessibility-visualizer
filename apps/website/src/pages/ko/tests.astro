---
import TestPageLayout from "../../layouts/TestPageLayout.astro";
import ImageTests from "../../components/tests/ImageTests.astro";
import ButtonTests from "../../components/tests/ButtonTests.astro";
import LinkTests from "../../components/tests/LinkTests.astro";
import FormControlTests from "../../components/tests/FormControlTests.astro";
import HeadingTests from "../../components/tests/HeadingTests.astro";
import TableTests from "../../components/tests/TableTests.astro";
import AriaHiddenTests from "../../components/tests/AriaHiddenTests.astro";
import LayoutTests from "../../components/tests/LayoutTests.astro";
import LiveRegionTests from "../../components/tests/LiveRegionTests.astro";
import Warning from "../../components/tests/Warning.astro";

export const prerender = true;
import { createLocalT } from "../../lib/i18n";
import pageKo from "./tests.lang";
import pageEn from "../tests.lang";
const t = createLocalT(pageKo, pageEn);
---

<TestPageLayout
  lang="ko"
  title="테스트 페이지 - TheWCAG Accessibility Visualizer"
  description="의도적으로 문제가 있는 접근성 패턴을 포함한 TheWCAG Accessibility Visualizer 브라우저 확장 프로그램 테스트 예제"
  path="/thewcag-accessibility-visualizer/ko/tests/"
>
  <Warning lang="ko" />

  <div class="mb-8">
    <h2 class="text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
      {t("intro.title")}
    </h2>
    <p class="text-lg text-zinc-700 dark:text-zinc-300 max-w-4xl">
      {t("intro.desc")}
    </p>
  </div>

  <!-- Table of Contents -->
  <div
    class="mb-12 bg-zinc-100 dark:bg-zinc-800 p-6 rounded-lg border border-zinc-200 dark:border-zinc-700"
  >
    <h3 class="text-xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
      {t("categories.title")}
    </h3>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-2">
      <a
        href="#headings"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.headings")}</a
      >
      <a
        href="#images"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.images")}</a
      >
      <a
        href="#links"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.links")}</a
      >
      <a
        href="#buttons"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.buttons")}</a
      >
      <a
        href="#form-controls"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.forms")}</a
      >
      <a
        href="#layout"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.landmarks")}</a
      >
      <a
        href="#tables"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.tables")}</a
      >
      <a
        href="#aria-hidden"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.ariaHidden")}</a
      >
      <a
        href="#live-regions"
        class="text-teal-700 dark:text-teal-300 hover:text-teal-800 dark:hover:text-teal-200 underline hover:no-underline font-medium"
        >{t("categories.headings.liveRegions")}</a
      >
    </div>
  </div>
  <!-- Test Categories -->
  <div id="test-categories">
    <HeadingTests lang="ko" />
    <ImageTests lang="ko" />
    <LinkTests lang="ko" />
    <ButtonTests lang="ko" />
    <FormControlTests lang="ko" />
    <LayoutTests lang="ko" />
    <TableTests lang="ko" />
    <AriaHiddenTests lang="ko" />
    <LiveRegionTests lang="ko" />
  </div>
</TestPageLayout>
