---
import SiteLayout from "../layouts/SiteLayout.astro";
import { createLocalT } from "../lib/i18n";
import pageDict from "./index.lang";

export const prerender = true;
const tPage = createLocalT(pageDict, pageDict);
---

<SiteLayout lang="en" path="/a11y-visualizer/">
  <!-- Hero Section -->
  <section
    class="bg-gradient-to-br from-teal-50 via-teal-50/50 to-zinc-50 dark:from-zinc-800 dark:via-zinc-800/50 dark:to-zinc-900 py-20 sm:py-24"
  >
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-zinc-900 dark:text-zinc-100 mb-6 leading-tight">
        {tPage("hero.title")}
      </h2>
      <p
        class="text-lg sm:text-xl text-zinc-600 dark:text-zinc-400 mb-12 max-w-3xl mx-auto leading-relaxed"
      >
        {tPage("hero.description")}
      </p>
      <div class="flex justify-center">
        <img
          src={tPage("hero.screenshotSrc")}
          alt="Screenshot of TheWCAG Accessibility Visualizer in action"
          class="rounded-xl max-w-full h-auto shadow-2xl border border-zinc-200 dark:border-zinc-700"
        />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white dark:bg-zinc-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2
        class="text-3xl sm:text-4xl font-bold text-center text-zinc-900 dark:text-zinc-100 mb-16"
      >
        {tPage("features.title")}
      </h2>
      <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
        <div class="flex items-start space-x-4 p-6 rounded-xl bg-zinc-50 dark:bg-zinc-800/50 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors">
          <div
            class="flex-shrink-0 w-10 h-10 bg-teal-100 dark:bg-teal-900 rounded-lg flex items-center justify-center shadow-sm"
          >
            <span class="text-teal-700 dark:text-teal-300 font-bold text-lg">1</span>
          </div>
          <div class="flex-1">
            <h3
              class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-3"
            >
              {tPage("features.items.visual.title")}
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
              {tPage("features.items.visual.description")}
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4 p-6 rounded-xl bg-zinc-50 dark:bg-zinc-800/50 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors">
          <div
            class="flex-shrink-0 w-10 h-10 bg-teal-100 dark:bg-teal-900 rounded-lg flex items-center justify-center shadow-sm"
          >
            <span class="text-teal-700 dark:text-teal-300 font-bold text-lg">2</span>
          </div>
          <div class="flex-1">
            <h3
              class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-3"
            >
              {tPage("features.items.detection.title")}
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
              {tPage("features.items.detection.description")}
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4 p-6 rounded-xl bg-zinc-50 dark:bg-zinc-800/50 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors">
          <div
            class="flex-shrink-0 w-10 h-10 bg-teal-100 dark:bg-teal-900 rounded-lg flex items-center justify-center shadow-sm"
          >
            <span class="text-teal-700 dark:text-teal-300 font-bold text-lg">3</span>
          </div>
          <div class="flex-1">
            <h3
              class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-3"
            >
              {tPage("features.items.liveRegions.title")}
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
              {tPage("features.items.liveRegions.description")}
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-4 p-6 rounded-xl bg-zinc-50 dark:bg-zinc-800/50 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition-colors">
          <div
            class="flex-shrink-0 w-10 h-10 bg-teal-100 dark:bg-teal-900 rounded-lg flex items-center justify-center shadow-sm"
          >
            <span class="text-teal-700 dark:text-teal-300 font-bold text-lg">4</span>
          </div>
          <div class="flex-1">
            <h3
              class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-3"
            >
              {tPage("features.items.customizable.title")}
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
              {tPage("features.items.customizable.description")}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Download Section -->
  <section class="py-20 bg-zinc-50 dark:bg-zinc-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        {tPage("download.title")}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-12 max-w-2xl mx-auto">
        Get started with TheWCAG Accessibility Visualizer today
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="https://chromewebstore.google.com/detail/accessibility-visualizer/idcacekakoknnpbfjcdhnkffgfbddnhk"
          class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5 min-w-[200px]"
        >
          {tPage("download.chromeStore")}
        </a>
        <a
          href="https://addons.mozilla.org/ja/firefox/addon/accessibility-visualizer/"
          class="inline-flex items-center justify-center px-8 py-4 bg-orange-600 hover:bg-orange-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5 min-w-[200px]"
        >
          {tPage("download.firefoxAddons")}
        </a>
      </div>
    </div>
  </section>

  <!-- Guide Section -->
  <section class="py-20 bg-white dark:bg-zinc-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        {tPage("guide.title")}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-10 max-w-2xl mx-auto">
        {tPage("guide.description")}
      </p>
      <a
        href={tPage("guide.url")}
        class="inline-flex items-center px-8 py-4 bg-teal-600 hover:bg-teal-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5"
      >
        {tPage("guide.link")}
      </a>
    </div>
  </section>

  <!-- Test Examples Section -->
  <section class="py-20 bg-zinc-50 dark:bg-zinc-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        {tPage("tests.title")}
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-10 max-w-2xl mx-auto">
        {tPage("tests.description")}
      </p>
      <a
        href={tPage("tests.url")}
        class="inline-flex items-center px-8 py-4 bg-zinc-700 hover:bg-zinc-800 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5"
      >
        {tPage("tests.link")}
      </a>
    </div>
  </section>
</SiteLayout>
